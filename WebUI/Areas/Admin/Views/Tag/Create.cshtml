@model Tag
@{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
}
<form method="post">
    @* <div asp-validation-summary="All" class="alert-danger"></div> *@
    <div class="form-group">
        <label asp-for="TagName"></label>
        <input type="text" asp-for="TagName" class="form-control" value="" />
        <span asp-validation-for="TagName" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-block btn-dark w-100 btn-lg" value="Create" />
</form>